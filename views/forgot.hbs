<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h1 class="h3 mb-3 font-weight-normal text-center">{{__
            "forgotPassword"
          }}</h1>
      </div>
      <div class="card-body">
        <form action="/users/forgot" method="post">
          <div class="form-group">
            <label for="email">{{__ "email"}}</label>:
            <input
              type="email"
              class="form-control"
              name="email"
              id="email"
              placeholder="{{__ 'emailPlaceholder'}}"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">{{__
              "resetPassword"
            }}</button>
          {{#if error}}
            <div class="alert alert-danger mt-3">{{error}}</div>
          {{/if}}
          {{#if message}}
            <div class="alert alert-success mt-3">{{message}}</div>
          {{/if}}
        </form>
      </div>
    </div>
  </div>
</div>