<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h1 class="mb-4">Share Link</h1>
      <p class="lead">Here is your shareable link:</p>
      <div class="alert alert-primary" role="alert">
        <a href="{{shareLink}}" class="alert-link">{{shareLink}}</a>
      </div>
      <button
        class="btn btn-primary"
        onclick="copyToClipboard('{{shareLink}}')"
      >Copy Link</button>
    </div>
  </div>
</div>

<script>
  function copyToClipboard(link) { const el =
  document.createElement('textarea'); el.value = link;
  document.body.appendChild(el); el.select(); document.execCommand('copy');
  document.body.removeChild(el); alert('Link copied to clipboard'); }
</script>